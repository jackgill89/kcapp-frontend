$ const count = input.count || 1;
$ const color = input.color || "#000000";
<div class="statistics-card">
    <div>${input.value}</div>
    <div style=`color: ${color}`>
        <for|i| from=1 to=count>
            <i class=input.icon></i>
        </for>
    </div>
    <div class="hs-label">${input.label}</div>
</div>