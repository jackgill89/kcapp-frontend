<table align=input.align>
    <tr>
        <for|idx, i| of=[4, 3, 2, 1, 0]>
            $ var match = input.matches[idx];
            <if(match == null)>
                <td></td>
            </if>
            <else>
                <if(match.winner_id == null)>
                    <td>
                        <span class="fa-stack">
                            <i class="fa fa-circle fa-stack-2x col-grey"></i>
                            <strong class="fa-stack-1x">
                                <a class="text-primary col-white" href=`/matches/${match.id}`>D</a>
                            </strong>
                        </span>
                    </td>
                </if>
                <else-if(match.winner_id === input.player.id)>
                    <td>
                        <span class="fa-stack">
                            <i class="fa fa-circle fa-stack-2x col-green"></i>
                            <strong class="fa-stack-1x">
                                <a class="text-primary col-white" href=`/matches/${match.id}`>W</a>
                            </strong>
                        </span>
                    </td>
                </else-if>
                <else>
                    <td>
                        <span class="fa-stack">
                            <i class="fa fa-circle fa-stack-2x col-dead-red"></i>
                            <strong class="fa-stack-1x">
                                <a class="text-primary col-white" href=`/matches/${match.id}`>L</a>
                            </strong>
                        </span>
                    </td>
                </else>
            </else>
        </for>
    </tr>
</table>