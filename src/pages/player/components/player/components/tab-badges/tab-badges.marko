<table style="width: 100%;">
    <for|i| from=0 to=8>
        <tr>
            <for|j| from=0 to=3>
                $ let badge = state.badges[j + (4*i)]
                <if(badge)>
                    <td style="width: 25%;">
                        <badge image=`/images/badges/${badge.filename}` name=badge.name description=badge.description aquired=badge.aquired/>
                    </td>
                </if>
            </for>
        </tr>
    </for>
</table>
