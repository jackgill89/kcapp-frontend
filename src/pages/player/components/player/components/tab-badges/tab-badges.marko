<table style="width: 100%;">
    <for|i| from=0 to=(state.badges.length/4)>
        <tr>
            <for|j| from=0 to=3>
                $ let badge = state.badges[j + (4*i)]
                <if(badge)>
                    <td style="width: 25%;">
                        <badge badge=badge/>
                    </td>
                </if>
            </for>
        </tr>
    </for>
</table>
