<div class="block-container-header">
  <i class="fas fa-arrow-alt-circle-down"/>
  <span class="ml-10">Options</span>
</div>
<div class="block-container-with-header">
  <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#add-player-modal" on-click('addPlayer')>
    <i class="fas fa-user-plus"/>
    <span class="ml-10">Add Player</span>
  </button>
  <if(Object.keys(input.players).length > 0)>
    <button class="btn btn-secondary ml-5" type="button" onclick="location.href='/players/compare'">
      <i class="fas fa-equals"/>
      <span class="ml-10">Compare Players</span>
    </button>
  </if>
</div>
